<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :role => 'form', class: "margin-bottom-0"}) do |f| %>
<%= render "shared/form_error_messages", f: f%>

<div class="form-group m-b-20">
    <%= f.email_field :email, autofocus: true , placeholder:"Email Address", class:"form-control input-lg" , required:true %>
</div>
<div class="form-group m-b-20">
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control input-lg", required:true  %>
</div>
<% if devise_mapping.rememberable? -%>
<div class="checkbox m-b-20">
    <label>
        <%= f.check_box :remember_me %> <b  class="color-silver-lighter">Remember Me</b>
    </label>
</div>
<% end -%>

  <div class="login-buttons">
    <%= html_submit(content=fa_icon('sign-in', :text => "Login"), extra={class: "btn btn-success btn-block btn-lg btn-default"}) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
