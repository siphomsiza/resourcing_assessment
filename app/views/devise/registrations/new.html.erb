<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => 'form', class: "margin-bottom-0"}) do |f| %>
  <%= render "shared/form_error_messages", f: f%>
 <fieldset>
   <legend class="color-silver-lighter">Login info</legend>
   <div class="form-group m-b-20">
     <%= f.text_field :firstname, placeholder:"First Name", class:"form-control input-lg" , required:true %>
   </div>

   <div class="form-group m-b-20">
     <%= f.text_field :lastname, placeholder:"Last Name", class:"form-control input-lg" , required:true %>
   </div>

   <div class="form-group m-b-20">
     <%= f.email_field :email, autofocus: true , placeholder:"Email Address", class:"form-control input-lg" , required:true %>
   </div>

   <div class="form-group m-b-20">
     <%= f.password_field :password, autofocus: true, autocomplete: "off" , placeholder:"New password", class:"form-control input-lg", required:true  %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em><br />
     <% end %>
   </div>

   <div class="form-group m-b-20">
     <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Confirm new password", class:"form-control input-lg", required:true  %>
   </div>

</fieldset>

  <div class="login-buttons">
    <%= html_submit(content=fa_icon('user-plus', :text => "Sign up"), extra={class: "btn btn-success btn-block btn-lg"}) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
