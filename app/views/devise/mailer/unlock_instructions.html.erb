<!-- begin row -->
<table class="row">
  <tr>
    <!-- begin wrapper -->
    <td class="wrapper">
      <table class="twelve columns">
        <tr>
          <td class="last">
            <h4>Hello <%= @resource.email %>!</h4>
            <p class="m-b-5">Your account has been locked due to an excessive number of unsuccessful sign in attempts  on <%= link_to Settings.APP_NAME, root_url %>.</p>
            <p class="m-b-5">Click the link below to unlock your account:</p>
          </td>
        </tr>
        <tr>
          <td class="panel">
            <%= link_to unlock_url(@resource, unlock_token: @token), unlock_url(@resource, unlock_token: @token) %>
          </td>
        </tr>
        <tr>
          <td>
            <p class="m-t-15 last">If clicking the URL above does not work, copy and paste the URL into a browser window.</p>
          </td>
        </tr>
      </table>
    </td>
    <!-- end wrapper -->
  </tr>
</table>
<!-- end row -->
