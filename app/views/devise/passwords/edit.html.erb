<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :role => 'form', class: "margin-bottom-0" }) do |f| %>
  <%= render "shared/form_error_messages", f: f%>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group m-b-20">
      <%= f.password_field :password, autofocus: true, autocomplete: "off" , placeholder:"New password", class:"form-control input-lg", required:true  %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
  </div>

  <div class="form-group m-b-20">
      <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Confirm new password", class:"form-control input-lg", required:true  %>
  </div>


  <div class="login-buttons">
    <%= html_submit(content=fa_icon('key', :text => "Change my password"), extra={class: "btn btn-success btn-block btn-lg"}) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
