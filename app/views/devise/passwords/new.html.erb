<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :role => 'form', class: "margin-bottom-0" }) do |f| %>
  <%= render "shared/form_error_messages", f: f%>
  <div class="form-group m-b-20">
      <%= f.email_field :email, autofocus: true , placeholder:"Email Address", class:"form-control input-lg", required:true  %>
  </div>

  <div class="login-buttons">
    <%= html_submit(content=fa_icon('key', :text => "Send me reset password instructions"), extra={class: "btn btn-success btn-block btn-lg"}) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
